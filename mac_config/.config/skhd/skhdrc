# change window focus within space
alt + shift - j : yabai -m window --focus south
alt + shift - k : yabai -m window --focus north
alt + shift - h : yabai -m window --focus west
alt + shift - l : yabai -m window --focus east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2
# shift + alt - t : yabai -m config --space 2 layout float

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# swap windows
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - l : yabai -m window --swap east

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# increase window size
ctrl + shift + alt - h : yabai -m window --resize left:-20:0
ctrl + shift + alt - j : yabai -m window --resize bottom:0:20
ctrl + shift + alt - k : yabai -m window --resize top:0:-20
ctrl + shift + alt - l : yabai -m window --resize right:20:0

# move window to space #
shift + alt - 1 : yabai -m window --space 1 --focus;
shift + alt - 2 : yabai -m window --space 2 --focus;
shift + alt - 3 : yabai -m window --space 3 --focus;
shift + alt - 4 : yabai -m window --space 4 --focus;
shift + alt - 5 : yabai -m window --space 5 --focus;
shift + alt - 6 : yabai -m window --space 6 --focus;
shift + alt - 7 : yabai -m window --space 7 --focus;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
